# grid

if [ -f ~/.bashrc ]; then
. ~/.bashrc
fi

export ORACLE_SID={{node1_grid_sid}}
export ORACLE_BASE={{ grid_base }}
export ORACLE_HOME={{ grid_home }}
export TNS_ADMIN={{ oracle_base_home }}/network/admin
export ORACLE_TERM= xterm
export JAVA_HOME=/usr/bin/java
PATH=.:${JAVA_HOME}/bin:${PATH}:$HOME/bin:$ORACLE_HOME/bin:${ORACLE_HOME}/OPatch
PATH=${PATH}:/usr/bin:/bin:/usr/local/bin
export PATH
export TEMP=/tmp
export TMPDIR=/tmp
umask 022



